<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/viewlow"
            android:layout_width="match_parent"
            android:layout_height="386dp"
            android:layout_weight="4"
            android:background="#fff"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_login" />

        <View

            android:id="@+id/viewids"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff" />
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idUserLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="?actionBarSize"
            android:text="Register"
            android:textColor="#fff"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/userprofilel"
            android:layout_width="194dp"
            android:layout_height="63dp"
            app:srcCompat="@drawable/userblue" />

        <EditText
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_margin="20dp"
            android:background="@drawable/rounded_corner"
            android:hint="Username"
            android:drawableEnd="@drawable/ic_contact_mail_black_24dp"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textColor="#fff"
            android:textColorHint="#eee"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_margin="20dp"
            android:background="@drawable/rounded_corner"
            android:hint="Email"
            android:drawableEnd="@drawable/ic_contact_mail_black_24dp"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textColor="#fff"
            android:textColorHint="#eee"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edtPass"
            android:layout_below="@id/email_field"
            android:textColor="#fff"
            android:textColorHint="#eee"
            android:drawableEnd="@drawable/ic_lock_black_24dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:hint="Password"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/rounded_corner"
            android:textSize="17sp"
            />

        <EditText
            android:id="@+id/edtAge"
            android:textColor="#fff"
            android:textColorHint="#eee"
            android:drawableEnd="@drawable/ic_lock_black_24dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:hint="Age"
            android:ems="10"
            android:inputType="number"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/rounded_corner"
            android:textSize="17sp"
            />

        <Button
            android:id="@+id/btnRegister"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/rounded_corner_button"
            android:text="Register"
            android:textColor="#777"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/tvUserLogin"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_margin="?actionBarSize"
            android:text="Already Signed in? Login"
            android:textColor="#EF6C00"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>




</RelativeLayout>